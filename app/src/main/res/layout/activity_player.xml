<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:id="@+id/activity_player"
    >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/boxTopBarPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="0dp"
        android:background="@null">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBarPlayer"
            android:layout_width="match_parent"
            android:elevation="0dp"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_down" />
    </com.google.android.material.appbar.AppBarLayout>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/boxAlbumPlayer"
        android:layout_below="@id/boxTopBarPlayer"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="5dp"
        android:layout_margin="5dp"
        app:cardElevation="0dp">
        <ImageView
            android:id="@+id/imgAlbumCoverPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/anhdatuboroiday" />
    </com.google.android.material.card.MaterialCardView>


    <Space
        android:id="@+id/spaceMiddle"
        android:layout_below="@id/boxAlbumPlayer"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/txtSongTitlePlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spaceMiddle"
        android:gravity="left"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:text="Song Title"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"/>
    <TextView
        android:id="@+id/txtArtistPlayer"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtSongTitlePlayer"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:gravity="left"
        android:text="Artist"
        android:textSize="18sp"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"/>

    <Space
        android:id="@+id/spaceMiddle2"
        android:layout_below="@id/txtArtistPlayer"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

<!--    <com.google.android.material.slider.Slider-->
<!--        android:id="@+id/sliderMainPlayer"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/spaceMiddle2"-->
<!--        android:layout_marginLeft="32dp"-->
<!--        android:layout_marginRight="32dp"-->
<!--        app:trackColorActive="@color/white"-->
<!--        app:trackColorInactive="@color/dark_grey"-->
<!--        app:thumbColor="@color/white"-->
<!--        android:max="100"-->
<!--        android:progress="0"-->
<!--        android:shadowColor="#000"-->
<!--        android:shadowDx="0"-->
<!--        android:shadowDy="0"-->
<!--        android:shadowRadius="50"/>-->
    <SeekBar
        android:id="@+id/sliderMainPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spaceMiddle2"
        android:layout_marginLeft="16.1dp"
        android:layout_marginRight="16.1dp"
        android:shadowColor="#000"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="50"
        android:progressBackgroundTint="@color/dark_grey"
        android:progressTint="@color/white"
        android:thumbTint="@color/white"
        />

    <LinearLayout
        android:id="@+id/boxTimerPlayer"
        android:layout_below="@id/sliderMainPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:orientation="horizontal"
        android:layout_marginRight="32dp"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="5"
            android:text="00:00"
            android:textColor="@color/white"
            android:shadowColor="#000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="50"/>

        <TextView
            android:id="@+id/finalTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="00:00"
            android:layout_weight="5"
            android:gravity="right"
            android:shadowColor="#000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="50"/>
    </LinearLayout>

    <Space
        android:id="@+id/spaceMiddle3"
        android:layout_below="@id/boxTimerPlayer"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <LinearLayout
        android:id="@+id/boxControlPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spaceMiddle3"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btnPreviousPlayer"
            style="?attr/materialIconButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_previous" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btnPlayPausePlayer"
            style="?attr/materialIconButtonStyle"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_pause" />

        <Space
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

        <ImageButton
            android:id="@+id/btnNextPlayer"
            style="?attr/materialIconButtonStyle"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/ic_next" />

    </LinearLayout>

</RelativeLayout>
