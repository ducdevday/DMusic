    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_back"
        android:background="@color/black"
        />
    <LinearLayout
        android:id="@+id/boxUpload"
        android:layout_below="@id/btnBack"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:text="Upload Songs"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUpload"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_below="@+id/boxUpload"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgArtistCover"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@drawable/img_cover"
            />

        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Select files"-->
        <!--            android:textSize="24dp"/>-->

        <LinearLayout
            android:id="@+id/boxMusicFileUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMusicFileUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose music file"/>

            <TextView
                android:id="@+id/txtMusicFileUpload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:gravity="center_vertical"
                android:text="No file selected"
                android:textColor="@color/white"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/boxAlbumCoverUpload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/btnMusicImgUpload"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose Img cover" />

            <TextView
                android:id="@+id/txtMusicImgUpload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="No file selected"
                android:textColor="@color/white"
                android:textSize="14dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="@color/white"
            android:textSize="18dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </Space>

        <EditText
            android:id="@+id/edtTxtSongTitleUpload"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/nav_color"
            android:inputType="text"
            android:textColor="@color/white"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </Space>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Artist"
            android:textColor="@color/white"
            android:textSize="18dp"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="10dp">
        </Space>

        <EditText
            android:id="@+id/edtTxtArtistNameUpload"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/nav_color"
            android:inputType="text"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btnUpload"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/fab_color"
            android:text="upload" />

    </LinearLayout>


</RelativeLayout>